  <title>Instant \x Hex Encoder</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #121212; color: #eee; }
    textarea { width: 100%; height: 100px; font-size: 16px; background: #222; color: #eee; border: none; padding: 10px; }
    pre { background: #222; padding: 15px; white-space: pre-wrap; word-break: break-all; font-family: monospace; }
    button { margin-top: 10px; padding: 10px 20px; font-size: 16px; cursor: pointer; background: #007acc; color: #fff; border: none; }
    button:hover { background: #005f99; }
  </style>
</head>
<body>
  <h1>Instant \x Hex Encoder</h1>
  <textarea id="input" placeholder="Type or paste your text here..."></textarea><br />
  <button onclick="encode()">Encode</button>
  <h2>Encoded output:</h2>
  <pre id="output"></pre>

  <script>
    function encode() {
      const input = document.getElementById('input').value;
      const encoded = [...input]
        .map(c => '\\x' + c.charCodeAt(0).toString(16).padStart(2, '0'))
        .join('');
      document.getElementById('output').textContent = encoded;
    }
  </script>
</body>
